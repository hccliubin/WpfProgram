<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:HeBianGu.Base.WpfBase">


    <!--选中按钮的前景色-->
    <SolidColorBrush x:Key="S_Gray" Color="#EEEEEE"></SolidColorBrush>
 
    <SolidColorBrush x:Key="S_OpacityGray" Opacity="0.2" Color="#EEEEEE"></SolidColorBrush>
    
    <!--用于输入框边框线条颜色及上下栏底色，横线，输入框提示-->
    <SolidColorBrush x:Key="S_WhiteCommon" Color="#FFFFFF"></SolidColorBrush>

    <!--未选中按钮的前景色 #007ACC-->
    <SolidColorBrush x:Key="S_Blue"  Color="#007ACC"></SolidColorBrush>

    <SolidColorBrush x:Key="S_OpacityBlue" Opacity="0.2" Color="#007ACC"></SolidColorBrush>
    
    <!--用于标题及重要文字部分，可点击文本-->
    <SolidColorBrush x:Key="S_BlueCommon" Color="#37BFF0"></SolidColorBrush>

    <!--用于普通文字及选择状态-->
    <SolidColorBrush x:Key="S_GreenCommon" Color="#57D5DF"></SolidColorBrush>

    <!--用于文本中需要强调的部分-->
    <SolidColorBrush x:Key="S_GreenNotice" Color="#61D8A8"></SolidColorBrush>

    <!--补色：背景及边框按钮颜色-->
    <LinearGradientBrush x:Key="CenterColor" EndPoint="0.5,1" StartPoint="0.5,0" >
        <GradientStop Color="#57D5DF" />
        <GradientStop Color="#61D8A8" Offset="1"/>
    </LinearGradientBrush>

    <!--不可操作时文字使用-->
    <SolidColorBrush x:Key="S_GrayDark" Color="#BFBFBF"></SolidColorBrush>

    <!--用于突出易识别及重点区域-->
    <SolidColorBrush x:Key="S_BlackNotice" Color="#433F3E"></SolidColorBrush>

    <!--用于警示文本及重点区域-->
    <SolidColorBrush x:Key="S_RedNotice" Color="#FF0000"></SolidColorBrush>

    <SolidColorBrush x:Key="S_OrangeNotice" Color="DarkOrange"></SolidColorBrush>

    <!--滚动条颜色-->
    <SolidColorBrush x:Key="ScrollBarForeround" Color="#877F7F"></SolidColorBrush>
    
    
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#3E3E42"></SolidColorBrush>

    <SolidColorBrush x:Key="TextForeground" Color="White"></SolidColorBrush>

    <SolidColorBrush x:Key="MouseOverForeground" Color="Orange"></SolidColorBrush>
    
    <SolidColorBrush x:Key="PressedForeground" Color="DarkOrange"></SolidColorBrush>

    <sys:Double x:Key="WindowOpacity">0.2</sys:Double>

    <sys:Double x:Key="ControlOpacity">0.5</sys:Double>
    
</ResourceDictionary>