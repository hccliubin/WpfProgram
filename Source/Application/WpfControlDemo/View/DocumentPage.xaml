<Page x:Class="WpfControlDemo.View.DocumentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControlDemo.View"
      xmlns:wpfdocument="clr-namespace:HeBianGu.General.WpfDocument;assembly=HeBianGu.General.WpfDocument"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DocumentPage">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="绑定模板的文本展示："/>
                <wpfdocument:DocumnetControl x:Name="document"/>

                <TextBlock Text="文本文件展示："/>
                <Button Content="浏览文件" Click="Button_Click"/>
                <wpfdocument:DocumnetControl x:Name="filedocument"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
