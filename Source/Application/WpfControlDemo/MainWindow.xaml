        <!--<Frame Content="Frame" Grid.Column="1" Name="frame"/>-->

        <TreeView  ItemsSource="{Binding Source={StaticResource xdp}}" x:Name="TreeRoot" Background="{StaticResource S_GrayLight}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding XPath=Folder}">
                    <StackPanel  Height="25" Orientation="Horizontal">
                        <TextBlock Text="{Binding XPath=@FIcon}" FontSize="15" Style="{StaticResource FIcon}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="a" Text="{Binding XPath=@Name}"  VerticalAlignment="Center"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
            
        </TreeView>

        <Frame x:Name="PageContext"  Grid.Column="1"  Background="{StaticResource S_GrayLight}" BorderThickness="1" NavigationUIVisibility="Visible"  
               Source="{Binding ElementName=TreeRoot, Path=SelectedItem.Attributes[Value].Value}"
               
                          Keyboard.GotKeyboardFocus="property_GotKeyboardFocus"
               />

        <propertygrid:PropertyGrid  Background="{StaticResource S_GrayLight}" Grid.Column="2"  x:Name="property" PropertyFilterVisibility="Collapsed"/>

