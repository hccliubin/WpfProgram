<UserControl x:Class="HeBianGu.General.WpfControlLib.Controls.BindRichTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib.Controls"
             mc:Ignorable="d"  x:Name="control"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <RichTextBox HorizontalAlignment="Stretch"
                             BorderBrush="Violet"
                             VerticalScrollBarVisibility="Auto"  
                             VerticalAlignment="Stretch"
                             Background="{Binding ElementName=control,Path=Background}"
                             x:Name="rtb_all" TextChanged="rtb_all_TextChanged">
            <!--<FlowDocument Name="doc">
                --><!--<Paragraph>
                    <Run x:Name="run" Text="{Binding ElementName=listBox,Path=SelectedItem.Snippet,Mode=TwoWay}"></Run>
                </Paragraph>--><!--
            </FlowDocument>-->

        </RichTextBox>
    </Grid>
</UserControl>
