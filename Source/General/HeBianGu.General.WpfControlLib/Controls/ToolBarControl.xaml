                </Grid.ColumnDefinitions>

                <Thumb x:Name="ToolBarThumb" Margin="-3,-1,0,0"  
                       DockPanel.Dock="Right" Padding="6,5,1,6" 
                       Style="{StaticResource ToolBarThumbStyle}" Width="15"/>


