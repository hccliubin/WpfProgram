<wpfcontrollib:WindowBase
        xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
        x:Class="HeBianGu.MovieBrower.UserControls.ImageToolTip.ImageToolTipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.MovieBrower.UserControls.ImageToolTip"
    xmlns:imageviewcontrol="clr-namespace:HeBianGu.MovieBrower.UserControls.ImageViewControl"
    mc:Ignorable="d" Style="{StaticResource MessageWindowStyle}" WindowStyle="None"
        Title="ImageToolTipWindow"  Width="Auto" Height="Auto" >
    <Grid>
        <imageviewcontrol:ImageViewUserControl x:Name="imageView" IsShowLeftRight="False" IsAutoMove="True"
                                                                           Grid.Row="1" Grid.Column="2" Grid.RowSpan="3"  
                                                                          ImagePaths="{Binding ImageCollection}" />
    </Grid>
</wpfcontrollib:WindowBase>
